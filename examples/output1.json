{
  "project_name": "Freelancer Time Tracker MVP",
  "objective": "Build a web app for freelancers to track billable hours and generate invoices (6-week MVP).",
  "phases": [
    {
      "name": "Discovery & Architecture",
      "duration_weeks": 1,
      "deliverables": [
        "Define MVP scope and user stories",
        "Select tech stack (React, Node.js, PostgreSQL)",
        "Create data model (Users, Projects, TimeEntries, Invoices)"
      ],
      "acceptance_criteria": [
        "Approved user journey diagram",
        "Validated database schema"
      ]
    },
    {
      "name": "Core Functionality",
      "duration_weeks": 2,
      "features": [
        "User registration and authentication (JWT)",
        "CRUD for projects and time entries",
        "Basic dashboard UI"
      ],
      "dependencies": ["Backend APIs", "Database schema"],
      "acceptance_criteria": [
        "Users can log in and record time entries successfully"
      ]
    },
    {
      "name": "Invoicing & PDF Generation",
      "duration_weeks": 1,
      "features": [
        "Generate invoices by project/client",
        "Download invoice as PDF",
        "Email invoice to client"
      ],
      "acceptance_criteria": [
        "Invoice data accuracy verified",
        "PDF format matches brand style"
      ]
    },
    {
      "name": "UI Polish & QA",
      "duration_weeks": 2,
      "tasks": [
        "Responsive layout adjustments",
        "Add error handling and validation",
        "End-to-end testing (Cypress)",
        "Beta release and feedback collection"
      ],
      "acceptance_criteria": ["MVP ready for production"]
    }
  ]
}
